{
    "version": "2.0.0",
    "command": "g++",
    "args": ["-g","${file}","-Wall","-std=c++11", "-std=c++11","-o","${workspaceFolder}/exe/${fileBasenameNoExtension}.exe"], 
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*)\\\\(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 2,
            "line": 3,
            "column": 4,
            "severity": 5,
            "message": 6
        }
    }
}