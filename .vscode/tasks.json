{
    "version": "2.0.0",
    "command": "g++",
    "args": ["-g","${file}","-o","${workspaceFolder}/exe/${fileBasenameNoExtension}.exe"],    // 编译命令参数
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
            "regexp": "^(.*)\\\\(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 2,
            "line": 3,
            "column": 4,
            "severity": 5,
            "message": 6
        }
    }
}